@model web_application_task.Dtos.Profile.UpdateProfileDto

<div class="edit-container">
    <h1 class="edit-heading">Edit Profile</h1>

    <form class="edit-form" asp-action="Edit" method="post">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="Name" value="@Model.Name" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="email">Mail:</label>
            <input type="text" id="email" name="Email" value="@Model.Email" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" id="address" name="Address" value="@Model.Address" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="state">State:</label>
            <input type="text" id="state" name="State" value="@Model.State" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="city">City:</label>
            <input type="text" id="city" name="City" value="@Model.City" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="pincode">Pin Code:</label>
            <input type="number" id="pincode" name="PinCode" value="@Model.PinCode" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="telephone">Telephone:</label>
            <input type="number" id="telephone" name="TelePhone" value="@Model.TelePhone" required class="form-control" />
        </div>

        <button type="submit" class="update-button">Update Profile</button>
    </form>
</div>
